<% layout('/layouts/boilerplate') %>

<style>
    #filters {
        display:flex;
        flex-wrap: wrap;
        align-items: center;
        
    }

    .filters {
        text-align: center;
        margin-top: 2rem;
        margin-right: 2rem;
        opacity: 0.8;
        cursor: pointer;
    }

    .filters:hover{
        opacity: 1;
      
    }

    .filters p {
        font-size: 0.8rem ;
    }

    .taxInfo {
        display: none;
    }

    .tax-toggle {
        border: black 1px solid;
        border-radius: 1rem;
        height: 2.7rem;
        padding: 3px;
        display: flex;
        margin-left: 2rem;
       align-items: center;
       
        
    }
</style>

<div id="filters">
    <div class="filters">
         <div><i class="fa-solid fa-fire"></i></div>
         <p>Trendings</p>
    </div>
    
    <div class="filters">
         <div><i class="fa-solid fa-bed"></i></div>
         <p>Rooms</p>
    </div>

    <div class="filters">
        <div><i class="fa-brands fa-android"></i></div>
        <p>OMG!</p>
   </div>

   <div class="filters">
     <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Mountain city</p>
    </div>
    
    <div class="filters">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
   </div>

   <div class="filters">
       <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beaches</p>
     </div>

     <div class="filters">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>House Boats</p>
   </div>

   <div class="filters">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Moutains</p>
     </div>

     <div class="filters">
        <div><i class="fa-solid fa-water-ladder"></i></div>
        <p>Arctic Pools</p>
       </div>

    <div class="filters">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
         <p>Castles</p>
    </div>

    <!-- <div class="filters">
        <div><i class="fa-solid fa-utensils"></i></div>
        <p>Chef's Kitchen</p>
    </div> -->


    <div class="filters">
        <div><i class="fa-solid fa-tree-city"></i></div>
        <p>Tree Houses</p>
    </div>
     
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
          </div>
    </div>
    
   
</div>



     <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListing){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                       <b> <%= listing.title %><br></b>
                       &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                       <i class="taxInfo"> &nbsp; &nbsp; 18% + GST</i>
                      </p>
                    </div>
                </div>
            </a> 
        <% } %>  
      </div>
     

<script>
  let taxTool = document.getElementById("flexSwitchCheckDefault");
  taxTool.addEventListener("click",() => {
    let taxInfo = document.getElementsByClassName("taxInfo");
    for(info of taxInfo){
        if( info.style.display != "inline"){
            info.style.display = "inline";
        }else{
            info.style.display = "none";
        }
    }
  })
</script>